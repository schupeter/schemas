<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/schemas/classify/1.0/stylesheets/NumericClassification.xsl"?>
<NumericClassification xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../NumericClassification.xsd">
	<Title>Monthly Precipitation Classification #1</Title>
	<Abstract>This classification ranks monthly precipitation data (millimeters) into 5 classes.</Abstract>
	<AttributeToRank>
		<Title>Precipitation</Title>
		<Abstract>Precipitation</Abstract>
		<Values>
			<Measure type="http://www.w3.org/TR/xmlschema-2/#float" length="3" decimals="0">
				<UOM reference="http://unitsofmeasure.org/">
					<ShortForm>mm</ShortForm>
					<LongForm>millimeters</LongForm>
				</UOM>
			</Measure>
		</Values>
	</AttributeToRank>
	<ResultantValues>
		<Ordinal type="http://www.w3.org/TR/xmlschema-2/#string" length="2" decimals="0">
			<Classes>
				<Title>Canadian Precipitation Guide</Title>
				<Abstract>Monthly normals precipitation classes for Canada</Abstract>
				<Documentation>Monthly normals precipitation classes for Canada consisting of five classes.</Documentation>
			</Classes>
		</Ordinal>
	</ResultantValues>
	<RankingScheme>
		<HighestClass rank="1" minValue="100" includeMinValue="true" identifier="EW" title="Extremely Wet" color="467894"/>
		<MidClass rank="2" minValue="42" includeMinValue="true" identifier="W" title="Wet" color="4A876D"/>
		<MidClass rank="3" minValue="21" includeMinValue="true" identifier="M" title="Moist" color="55AB00"/>
		<MidClass rank="4" minValue="8" includeMinValue="true" identifier="L" title="Dry" color="9FAD00"/>
		<LowestClass rank="5" identifier="ED" title="Extremely Dry" color="FFDD57"/>
		<MissingClass identifier="nil" title="Missing" color="E2E2E2"/>
		<ExceptionClass identifier="n/a" originalValue="n/a" title="Not Available" color="CCCCCC"/>
	</RankingScheme>
</NumericClassification>
